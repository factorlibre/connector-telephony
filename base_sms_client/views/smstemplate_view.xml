<?xml version="1.0"?>
<odoo>
<record model="ir.ui.view" id="sms_template_tree">
        <field name="model">sms.template</field>
        <field name="arch" type="xml">
            <tree string="Sms">
                <field name="name" />
                <field name="model_id" />
                <field name="mobile_to" />
                <field name="partner_to" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="sms_template_form">
        <field name="model">sms.template</field>
        <field name="arch" type="xml">
            <form string="Sms">
                <sheet>
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="model_id" />
                            <field name="model" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="body" string="Body">
                            <field name="body" />
                        </page>
                        <page name="sms-config" string="SMS configuration">
                            <group>
                                <field name="mobile_to" />
                                <field name="partner_to" />
                            </group>
                        </page>
                        <page name="sms-advanced" string="SMS advanced configuration">
                            <group>
                                <field name="lang" />
                                <field name="gateway_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sms_template_tree">
        <field name="name">Sms templates</field>
        <field name="res_model">sms.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="sms_template_tree" />
    </record>

    <menuitem name="SMS Templates"
              id="menu_sms_templates"
              sequence="120"
              parent="base_phone.menu_config_phone"
              action="action_sms_template_tree" />
</odoo>
